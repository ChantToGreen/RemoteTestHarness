<Window x:Class="Client.DeleteConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="DeleteConfirm" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="20">Do you want to delete?</Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="Yes" Width="50" Margin="10" Click="Yes_Click">Yes</Button>
                <Button x:Name="No" Width="50" Margin="10" Click="No_Click">No</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>