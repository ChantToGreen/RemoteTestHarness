<Window x:Class="Client.WarningReq"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Warning" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50" FontSize="20" >Invalid request!</TextBlock>
            <Button Name="CloseButton" Height="30" Width="80" Click="Close_Click">Close</Button>
        </StackPanel>  
    </Grid>
</Window>
