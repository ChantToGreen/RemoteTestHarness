<Window x:Class="Client.InvalidValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="InvalidValue" Height="150" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Margin="0,20,0,0">Invalid value!</Label>
            <Button Width="40" Click="Button_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
