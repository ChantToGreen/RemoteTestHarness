<Window x:Class="Client.TextView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="TextView" Height="600" Width="800">
    <Grid>
        <Border>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" Margin="5, 5, 5, 5">
                <TextBlock x:Name="TextViewer" FontFamily="consolas" FontSize="18" Padding="13"></TextBlock>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
